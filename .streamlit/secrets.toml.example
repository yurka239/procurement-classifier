# Streamlit Cloud Secrets Configuration
# =====================================
# Copy this file to secrets.toml and fill in your values
# In Streamlit Cloud: Settings → Secrets → paste contents

# API Keys (required)
openai_api_key = "sk-proj-your-openai-key-here"

# Google Search API (optional - for web search fallback)
google_api_key = "AIzaSy-your-google-key-here"
google_cse_id = "your-cse-id-here"

# Perplexity API (optional - alternative to Google)
perplexity_api_key = ""

# Authentication Settings
# Set to true to require login
REQUIRE_AUTH = true

# User Accounts
# Password hashes generated with: hashlib.sha256("password".encode()).hexdigest()
# Or use plain text passwords for simpler setup

[users.admin]
password_hash = "8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918"  # "admin"
role = "admin"
name = "Administrator"

[users.user1]
password_hash = "password123"  # Plain text also works
role = "user"
name = "John Smith"

[users.user2]
password_hash = "password456"
